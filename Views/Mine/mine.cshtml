}

<link href="~/Content/MyCSS/show.css" rel="stylesheet" />
<link href="~/Content/MyCSS/mine.css" rel="stylesheet" />
<div>
    <!-- 查询输入框 -->
    <center>
        <div class="input-group search-panel">
            <input type="text" class="form-control" placeholder="提案编号 / 提案标题">
            <span class="input-group-btn">
                <button class="btn btn-warning" type="button">
                    <span class="glyphicon glyphicon-search"></span>搜索
                </button>
            </span>
        </div>
    </center>
    <!-- 多级联合筛选 -->
    <div id="whatTheTypeIs">所有分类></div>
    <div class="select-border">
        <!-- 提案类型选择 -->
        <div class="row">
            <div class="col-lg-1 select-type">类型：</div>
            <div class="col-lg-10 row">
                <div class="col-lg-1"><a href="#">全部</a></div>
                <div class="col-lg-2"><a href="#">教工工资</a></div>
                <div class="col-lg-2"><a href="#">校园公益</a></div>
                <div class="col-lg-2"><a href="#">学生相关</a></div>
                <div class="col-lg-2"><a href="#">教学相关</a></div>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-default btn-xs">更多</button>
            </div>
        </div>
        <hr class="select-line" />
        <!-- 提案年份选择 -->
        <div class="row">
            <div class="col-lg-1 select-type">年份：</div>
            <div class="col-lg-10 row">
                <div class="col-lg-1"><a href="#">全部</a></div>
                <div class="col-lg-2"><a href="#">2017年</a></div>
                <div class="col-lg-2"><a href="#">2018年</a></div>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-default btn-xs">更多</button>
            </div>
        </div>
        <hr class="select-line" />
        <!-- 提案月份选择 -->
        <div class="row">
            <div class="col-lg-1 select-type">月份：</div>
            <div class="col-lg-10 row">
                <div class="col-lg-1"><a href="#">全部</a></div>
                <div class="col-lg-1"><a href="#">1月</a></div>
                <div class="col-lg-1"><a href="#">2月</a></div>
